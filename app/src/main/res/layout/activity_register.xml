<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="30sp"
    android:paddingEnd="30sp"
    tools:context="com.softengi.mobcomp.softwareengi_mobile.RegisterActivity">

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="@string/main_et_username"
        android:layout_weight="1"/>

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="@string/main_et_username"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="@string/main_et_password"
        android:inputType="textPassword" />

    <CheckBox
        android:id="@+id/chkCoach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_chk_coach"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"/>

    <EditText
        android:id="@+id/etLanguage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/main_et_language"
        android:layout_weight="1"/>


    <Button
        android:id="@+id/btnSubmit"
        android:layout_height="5dp"
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="15sp"
        android:layout_marginEnd="15sp"
        android:layout_marginTop="50sp"
        android:text="@string/main_btn_register"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorWhite"
        android:layout_weight="1"/>


</LinearLayout>
