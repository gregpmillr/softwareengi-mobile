<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.softengi.mobcomp.softwareengi_mobile.RegisterActivity">

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/main_et_username" />

    <EditText
        android:id="@+id/etEmail"
        android:inputType="textEmailAddress"
        android:layout_below="@id/etUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/main_et_email" />

    <EditText
        android:id="@+id/etPassword"
        android:inputType="textPassword"
        android:layout_below="@id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/main_et_password" />

    <CheckBox
        android:id="@+id/chkCoach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etPassword"
        android:layout_marginStart="116dp"
        android:layout_marginTop="27dp"
        android:text="@string/main_chk_coach" />

    <EditText
        android:id="@+id/etLanguage"
        android:layout_below="@id/chkCoach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/main_et_language" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15sp"
        android:text="@string/main_btn_register"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorWhite"/>


</RelativeLayout>
